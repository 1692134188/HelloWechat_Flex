/**index.wxss**/
.header{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.header .icon image {
  width: 100rpx;
  height: 100rpx;
}
.header .icon{
  display:flex;
  flex-direction: column;
  align-items: center;
}

/* .content {
  display:flex;
  flex-direction: row;
  align-items: center;
} */
.content{
  display: flex;
  flex-flow: row wrap;  
  align-content: space-around;
}
.content .guobaoPic{
  width: 350rpx;
  height: 400rpx;
  padding: 10rpx 15rpx 10rpx 10rpx; 
}
.content .guobaoPic image {
  width: 100%;
  height: 100%;
}

.content  .guobaoOwner{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  /* 设置view相关的 */
  background-color: rgba(0, 0, 0, 0.618);
  position:absolute;
  width: 350rpx;
  height: 80rpx;
  margin: -80rpx 10rpx 10rpx 10rpx;
  /* 设置字体相关的 */
  color: white;
  font-size:medium;
  line-height:80rpx ;  /*字体居中*/
}
.content  .OwnerName,.Owner_text{
  margin-left: 10rpx;
}
.content  .OwnerFans{
  margin-right: 10rpx;
}
 
.content  .guobaoOwner image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle; /*图片居中*/
}
.content  .guobaoForm{
  margin-left: 10rpx;
}